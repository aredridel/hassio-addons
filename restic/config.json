{
    "name": "Restic",
    "version": "0.5.1-p7",
    "slug": "restic",
    "description": "Create back-ups using restic",
    "arch": [
        "armhf",
        "armv7",
        "aarch64",
        "i386",
        "amd64"
    ],
    "startup": "once",
    "boot": "manual",
    "map": [
        "config",
        "ssl",
        "addons",
        "backup",
        "share",
        "media"
    ],
    "options": {
        "env_vars": {
             "AWS_ACCESS_KEY_ID": "",
             "AWS_SECRET_ACCESS_KEY": "",
             "RESTIC_REPOSITORY": "",
             "RESTIC_PASSWORD": ""
        },
        "exclude_patterns": [
            "homeassistant/home-assistant.log",
            "homeassistant/home-assistant_v2.db",
            "addons/data/*_influxdb/influxdb/wal",
            "addons/data/*_restic/restic-cache"
        ]
    },
    "schema": {
        "env_vars": {
             "AWS_ACCESS_KEY_ID": "str?",
             "AWS_SECRET_ACCESS_KEY": "str?",
             "RESTIC_REPOSITORY": "str",
             "RESTIC_PASSWORD": "str"
        },
        "exclude_patterns" : ["str"]
    },
    "apparmor": false,
    "udev": true,
    "privileged": ["SYS_ADMIN"],
    "devices": ["/dev/disk/by-label/hassos-data", "/dev/*"]
}
